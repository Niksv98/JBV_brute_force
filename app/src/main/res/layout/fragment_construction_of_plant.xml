<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayPlantFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/plantImageViewFrag"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/augs_liinijas_punktinji" />

    <Button
        android:id="@+id/flowerButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonZiedsClicked" />

    <Button
        android:id="@+id/budButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonPumpursClicked" />

    <Button
        android:id="@+id/fruitButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonAuglisClicked" />

    <Button
        android:id="@+id/stalkButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonStublajsClicked" />

    <Button
        android:id="@+id/leafButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonLapaClicked" />

    <Button
        android:id="@+id/rootButtonFrag"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonSakneClicked" />
</RelativeLayout>

