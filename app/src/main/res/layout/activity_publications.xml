<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nils.botaniskietermini.Publications"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutForPublications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/publicationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/paddingAboutApp"
        android:paddingStart="@dimen/paddingAboutApp"
        android:paddingTop="@dimen/paddingAboutApp"
        android:text="@string/publications"
        android:textColor="@color/aboutAppTextColor"
        android:textStyle="bold"
        android:textSize="22sp" />

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>