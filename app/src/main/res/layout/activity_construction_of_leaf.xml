<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayLeaf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/leafImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/cerinju_lapa_liinijas_punkti"/>
    
    <Button
        android:id="@+id/leafButton1"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="tip of leaf blade"
        android:onClick="button1Clicked"/>
    <Button
        android:id="@+id/leafButton2"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="margin of leaf blade"
        android:onClick="button2Clicked"/>
    <Button
        android:id="@+id/leafButton3"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="leaf blade"
        android:onClick="button3Clicked"/>
    <Button
        android:id="@+id/leafButton4"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="leaf vein"
        android:onClick="button4Clicked"/>
    <Button
        android:id="@+id/leafButton5"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="petiole"
        android:onClick="button5Clicked"/>

</RelativeLayout>
