<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nils.botaniskietermini.TranslationAdd">

    <EditText
        android:id="@+id/lvInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/lvLang"
        app:layout_constraintLeft_toRightOf="@+id/lvLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.505" />

    <TextView
        android:id="@+id/lvLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LV:"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/laInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapSentences"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/laLang"
        app:layout_constraintLeft_toRightOf="@+id/laLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.459" />

    <TextView
        android:id="@+id/laLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LA:"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lvLang" />

    <EditText
        android:id="@+id/enInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/enLang"
        app:layout_constraintLeft_toRightOf="@+id/enLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.459" />

    <TextView
        android:id="@+id/enLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN:"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/laLang" />

    <EditText
        android:id="@+id/deInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapSentences"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/deLang"
        app:layout_constraintLeft_toRightOf="@+id/deLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.459" />

    <TextView
        android:id="@+id/deLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DE:"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/enLang" />

    <EditText
        android:id="@+id/ruInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/ruLang"
        app:layout_constraintLeft_toRightOf="@+id/ruLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.459" />

    <TextView
        android:id="@+id/ruLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RU:"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/deLang" />

    <EditText
        android:id="@+id/wikiInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="https://en.wikipedia.org/wiki/"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/wikiLang"
        app:layout_constraintLeft_toRightOf="@+id/wikiLang"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.459" />

    <TextView
        android:id="@+id/wikiLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIKI:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ruLang" />


    <CheckBox
        android:id="@+id/genusCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ģints"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/wikiLang"
         />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/genusCheckBox"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent">
    <Button
        android:id="@+id/addDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIEVIENOT"
        android:onClick="addData"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genusCheckBox" />

    <Button
        android:id="@+id/deleteDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DZĒST VISU"
        android:onClick="deleteData"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/genusCheckBox" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
