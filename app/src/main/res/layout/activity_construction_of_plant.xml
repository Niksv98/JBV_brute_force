<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayPlant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/augs_liinijas_punktinji" />

    <Button
        android:id="@+id/flowerButton"
        android:layout_width="@dimen/plantButtonDiameter"
        android:tag="flower"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonZiedsClicked" />

    <Button
        android:id="@+id/budButton"
        android:tag="bud"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonPumpursClicked" />

    <Button
        android:id="@+id/fruitButton"
        android:layout_width="@dimen/plantButtonDiameter"
        android:tag="fruit"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonAuglisClicked" />

    <Button
        android:id="@+id/stalkButton"
        android:layout_width="@dimen/plantButtonDiameter"
        android:tag="stalk"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonStublajsClicked" />

    <Button
        android:id="@+id/leafButton"
        android:layout_width="@dimen/plantButtonDiameter"
        android:layout_height="@dimen/plantButtonDiameter"
        android:tag="leaf"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonLapaClicked" />

    <Button
        android:id="@+id/rootButton"
        android:layout_width="@dimen/plantButtonDiameter"
        android:tag="root"
        android:layout_height="@dimen/plantButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonSakneClicked" />
</RelativeLayout>

