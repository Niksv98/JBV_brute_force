<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayCloverLeaf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/cloverLeafImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/abolinjsh__12_10"/>

    <Button
        android:id="@+id/cloverLeafButton1"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:background="@drawable/roundedbutton"
        android:tag="leaflet"
        android:onClick="cloverLeafButton1Clicked"/>
    <Button
        android:id="@+id/cloverLeafButton2"
        android:layout_width="@dimen/leafButtonDiameter"
        android:layout_height="@dimen/leafButtonDiameter"
        android:onClick="cloverLeafButton2Clicked"
        android:tag="petiole"
        android:background="@drawable/roundedbutton"/>

</RelativeLayout>