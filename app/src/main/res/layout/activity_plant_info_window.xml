<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundInfoWindow"
    tools:context="com.example.nils.botaniskietermini.PlantInfoWindow">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp">

        <ImageView android:layout_height="30dp" android:layout_width="60dp" android:id="@+id/pictogram" android:layout_gravity="start" android:src="@drawable/pictogram"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/laCodePlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LA:"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/laTranslationPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/translationsColor"
                android:fontFamily="serif"
                android:text=""
                android:textStyle="italic"
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deCodePlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DE:"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/deTranslationPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/translationsColor"
                android:text=""
                android:textSize="9pt" />

            <TextView
                android:id="@+id/deGenderPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text=""
                android:textStyle="italic"
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enCodePlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN:"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/enTranslationPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/translationsColor"
                android:text=""
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvCodePlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV:"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/lvTranslationPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/translationsColor"
                android:text=""
                android:textSize="9pt" />

            <TextView
                android:id="@+id/lvGenderPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text=""
                android:textStyle="italic"
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ruCodePlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RU:"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/ruTranslationPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/translationsColor"
                android:text=""
                android:textSize="9pt" />

            <TextView
                android:id="@+id/ruGenderPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text=""
                android:textStyle="italic"
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/gendersPlantInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gendersLegend2"
                android:textSize="7pt" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
